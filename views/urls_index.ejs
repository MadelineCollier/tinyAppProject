<!-- views/urls_index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
</head>
<body>
  <header>
      <% include ./partials/_header %>
  </header>
  <ul>
    <% for (var url in urls) { %>
      <% if (urls[url].user_id === cookieID) { %>
        <li><%= `${urls[url].url}: ${url}` %></li>
        <form method="POST" action="/urls/<%= url %>/delete">
          <button type="submit">Delete This URL</button>
        </form>
        <a href="/urls/<%= url %>">Edit This URL</a>
      <% } %>
    <% } %>
  </ul>
  <div>
    <a href="/urls/new">Shorten a new URL!</a>
  </div>
</body>
</html>
