<!-- views/partials/header.ejs -->

<!DOCTYPE html>
  <h3><i>Welcome to TinyApp!</i></h3>

  <% if (username) { %>
  <h4><%= username %> &nbsp
  <form method="POST" action="/logout" style="display:inline">
    <input type="submit" value="Logout">
  </form>
  </h4>
  <% } else { %>
  <form method="POST" action="/login">
    <input id="username" type="text" name="username" placeholder="Enter Username" style="width: 100px">
    <input type="submit" value="Submit">
  </form>
  <% } %>

